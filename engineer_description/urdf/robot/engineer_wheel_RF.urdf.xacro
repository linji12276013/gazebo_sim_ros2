<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find engineer_description)/urdf/robot/engineer_wheel.gazebo"/>
  <xacro:include filename="$(find engineer_description)/urdf/robot/engineer_wheel.transmission.xacro"/>

  <xacro:macro name="engineer_wheel_RF" params="prefix parent origin_x origin_y origin_z rotation_x">
    <joint name="${prefix}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="wheel_${prefix}"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="${rotation_x} 0 0"/>
      <axis xyz="0 0 1"/>
      <!-- <dynamics damping="3.0" friction="5.0"/> -->
    </joint>

    <link name="wheel_${prefix}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find engineer_description)/meshes/wheel_RF.STL" />
        </geometry>
        <material name="white">
          <color rgba="1.0 1.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find engineer_description)/meshes/wheel_RF.STL" />
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>0.0</mu2>
              <fdir1>1 1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.007056" />
        <inertia ixx="0.000017" ixy="0" ixz="0"
                 iyy="0.000017" iyz="0" izz="0.000033" />
      </inertial>
    </link>
  </xacro:macro>

</robot>
