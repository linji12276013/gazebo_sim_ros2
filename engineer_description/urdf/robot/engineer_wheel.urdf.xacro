<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find engineer_description)/urdf/robot/engineer_wheel.gazebo"/>
  <xacro:include filename="$(find engineer_description)/urdf/robot/engineer_wheel.transmission.xacro"/>

  <xacro:macro name="engineer_wheel" params="prefix parent origin_x origin_y origin_z rotation_x">
    <joint name="${prefix}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="wheel_${prefix}"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}" rpy="${rotation_x} 0 0"/>
      <axis xyz="0 0 1"/>
      <!-- <dynamics damping="4.0" friction="5.0"/> -->
    </joint>

    <link name="wheel_${prefix}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find engineer_description)/meshes/wheel_${prefix}.STL" />
        </geometry>
        <material name="white">
          <color rgba="1.0 1.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find engineer_description)/meshes/wheel_${prefix}.STL" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.192661" />
        <inertia ixx="0.000408" ixy="0" ixz="0"
                 iyy="0.000408" iyz="0" izz="0.00078" />
      </inertial>
    </link>
  </xacro:macro>

</robot>
